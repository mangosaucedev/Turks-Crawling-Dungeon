<?xml version="1.0" encoding="utf-8"?>
<Objects>

	<!-- Furniture -->

	<Object Name="Furniture" InheritsFrom="PhysicalObject">

		<OverridePart Name="Render">
			<Var Name="Sprite">TurkVessel</Var>
		</OverridePart>

		<Part Name="Obstacle">
			<Var Name="IsImpassable">True</Var>
		</Part>

	</Object>

	<Object Name="EyeTv" InheritsFrom="Furniture">

		<OverridePart Name="Render">
			<Var Name="DisplayName">Strange Eyeball</Var>
			<Var Name="DisplayNamePlural">Strange Eyeballs</Var>
			<Var Name="Description">The slimy organ fixes its gaze on Turk. In the depths of its dark pupil, a light begins to flicker and dance. Turk can only stare back in horror, the sound of blood rushing in his ears.</Var>
			<Var Name="Sprite">EyeTv</Var>
		</OverridePart>

		<Part Name="EyeTv"/>
		
	</Object>

	<Object Name="TurkArm" InheritsFrom="Furniture">
		
		<OverridePart Name="Render">
			<Var Name="DisplayName">Strange Sculpture</Var>
			<Var Name="DisplayNamePlural">Strange Sculptures</Var>
			<Var Name="Description">A bizarre stone sculpture of an arm grasping for the ceiling. White slices score its length, no doubt in mockery of Turk's own scar-riddled skin.</Var>
			<Var Name="Sprite">TurkArm</Var>
		</OverridePart>

	</Object>

	<!-- Table -->

	<Object Name="GenericTable" InheritsFrom="Furniture">

		<OverridePart Name="Render">
			<Var Name="DisplayName">Table</Var>
			<Var Name="DisplayNamePlural">Tables</Var>
			<Var Name="Description">A table.</Var>
			<Var Name="Sprite">GenericTable</Var>
		</OverridePart>

	</Object>
	
	<!-- Chair -->

	<Object Name="GenericChair" InheritsFrom="Furniture">

		<DisplayName>Chair</DisplayName>

		<OverridePart Name="Render">
			<Var Name="DisplayName">Chair</Var>
			<Var Name="DisplayNamePlural">Chairs</Var>
			<Var Name="Description">A chair.</Var>
			<Var Name="Sprite">GenericChair</Var>
		</OverridePart>

	</Object>

	<!-- Container -->

	<Object Name="Container" InheritsFrom="Furniture">

		<Part Name="Inventory">
			<Var Name="BaseMaxWeight">100</Var>
		</Part>

		<Part Name="Lootable"/>
		
	</Object>

	<Object Name="TurkVessel" InheritsFrom="Container">
		
		<OverridePart Name="Render">
			<Var Name="DisplayName">Strange Vessel</Var>
			<Var Name="DisplayNamePlural">Strange Vessels</Var>
			<Var Name="Description">A strange sculpture in the image of Turk. Large pieces of it have broken off, revealing it to be a hollow vessel made of brittle stone.</Var>
		</OverridePart>
		
	</Object>

	<Object Name="MetalBarrel" InheritsFrom="Container">
		
		<OverridePart Name="Render">
			<Var Name="DisplayName">Metal Barrel</Var>
			<Var Name="DisplayNamePlural">Metal Barrels</Var>
			<Var Name="Description">A rusted barrel. Judging from the thick coating of soot, it was recently used to burn something.</Var>
			<Var Name="Sprite">MetalBarrel</Var>
		</OverridePart>
		
	</Object>

	<Object Name="MetalShelves" InheritsFrom="Container">

		<OverridePart Name="Render">
			<Var Name="DisplayName">Metal Shelves</Var>
			<Var Name="DisplayNamePlural">Metal Shelves</Var>
			<Var Name="Description">A sturdy metal shelf.</Var>
			<Var Name="Sprite">MetalShelves</Var>
		</OverridePart>

	</Object>

</Objects>
